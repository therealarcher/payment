<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('./partials/_head.ejs') %>
  </head>

  <body>
    <%- include ('./partials/_header.ejs') %>
    <form id="registration-form" class="text-center border border-light p-5" method="POST" action="/register">

      <p class="h4 mb-4">Login</p>

      <div class="form-row mb-4">
        <div class="col">
          <input type="email" id="RegisterFormEmail" class="form-control" placeholder="E-mail" name="email">
        </div>
      </div>
      <div class="form-row mb-4">  
        <div class="col">
          <input type="password" id="RegisterFormPassword" class="form-control" placeholder="Password" name="password">
        </div>
      </div>
      <button id="reg-submit-button" class="btn btn-success my-4 btn-block" type="submit">Login</button>

  </body>
</html>
